.subscribe-form--splash
  min-height 40vh
  display flex
  flex-direction column
  align-items center
  justify-content center
  h1
    padding-top 40px
    color rgba(255,255,255,0.8)
    font-weight 900
    line-height 1.8rem
    font-size 2rem
  form
    display flex
    align-items flex-start
    justify-content center
    padding 20px
  .button--cta
    margin 0 0 0 10px
    font-size 1.2rem
    font-weight bold
  .text-bounds
    margin 0
    display inline-block
  .description
    font-size 1.2rem
@media only screen and (min-width: 600px)
  .subscribe-form--splash
    h1
      padding-top 40px
      font-size 3rem
      line-height 2.5rem
@media only screen and (min-width: 1030px)
  .subscribe-form--splash
    h1
      font-size 4rem
      line-height 3.6rem
.subscribe-form--eu
  padding-top 80px
  .text-bounds
    max-width 600px
  .description
    max-width 480px
  h1
    padding-top 40px
    border-top 1px solid white
  form
    display flex
    align-items center
    justify-content center
  .button--cta
    margin 0 0 0 20px
.text-email
  border none
  font-size 1.2rem
  padding 3px
  height 41px
  box-sizing border-box
  border-radius 4px
@media only screen and (min-width: 600px)
  .subscribe-form--eu
    h1
      padding-top 40px
      font-size 3rem
@media only screen and (min-width: 1030px)
  .subscribe-form--eu
    h1
      font-size 4rem
@media only screen and (min-width: 1280px)
  .subscribe-form--eu
    h1
      font-size 4rem
